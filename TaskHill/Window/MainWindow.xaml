<Window x:Class="TaskHill.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskHill"
        mc:Ignorable="d"
        Title="Авторизация" Height="720" Width="1280"
        MinHeight="600" MinWidth="800"
        Background="RoyalBlue"
        WindowStartupLocation="CenterScreen"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="2.5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Rectangle Grid.Column="1" Grid.Row="1" Fill="White" RadiusX="20" RadiusY="20">
            <Rectangle.Effect>
                <DropShadowEffect BlurRadius="30" Color="Gray" ShadowDepth="0"/>
            </Rectangle.Effect>
        </Rectangle>
        <Frame x:Name="FrameAuthorization" NavigationUIVisibility="Hidden" Grid.Column="1" Grid.Row="1" Source="\Pages\Authorization\PageAuthorization.xaml">
            
        </Frame>
    </Grid>
    
</Window>
